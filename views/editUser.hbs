<div class="toolbar" role="banner">
  <h2 class="title">The "CRUD" Site</h2>
</div>
<br><br><br>
<div class='hLinks'>
    <a href="/users/home">Home</a>
    <a href="/users/logout">Logout</a>
    <a href="/users/profile">Profile</a>
    <a href="/users/admin">Admin</a>
</div> 

<div class='adminEdit'>
    <h1>Name: {{userData.FirstName}} {{userData.LastName}}</h1>
    <h3>Username: {{userData.Username}}</h3>
    <h3>Email: {{userData.Email}}</h3>
</div><br>
{{!--Delete User --}}
<form class="delete" method= "POST" action="/users/admin/delete/{{userData.UserId}}">
    <input class="inputButton" type="submit" value="Delete User"/>
</form><br><br>

<div class="deletePostsHere">
  <h1>Delete Posts Here</h1>
</div>

<div class="backButton">
  {{#each userData.posts}}
    <h3>{{PostTitle}}</h3>
    <p>Deleted Status: {{Deleted}}</p>
    <form method="POST" action="/posts/admin/deletePost/{{PostId}}">
    <input class="inputButton" type="submit" value="Delete Post">
    </form>
  {{/each}}
</div><br><br>

<div class="backButton">
  <a href="/users/admin">Back</a>
</div>

